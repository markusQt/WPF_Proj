            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width=" 100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Appinfos...." FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>
